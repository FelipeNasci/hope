{
  "openapi": "3.0.3",
  "info": {
    "title": "Hope API",
    "description": "Correct uses of Hope RestAPI",
    "contact": {
      "name": "felipeNasci",
      "url": "http://github.com/felipenasci",
      "email": "dfnascimento@live.com"
    },
    "license": {
      "name": "MIT",
      "url": "http://escolhaumalicenca.com.br/licencas/mit/"
    },
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3005",
      "description": "development"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Create user",
        "description": "Create new user",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "user@email.com",
                    "password": "123456",
                    "typeUser": "PATIENT"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Users"
                }
              }
            }
          },
          "400": {
            "description": "bad request"
          },
          "401": {
            "description": "user already exists"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "typeUser": {
            "type": "string",
            "enum": ["PATIENT, SPECIALIST"]
          }
        }
      }
    }
  }
}
